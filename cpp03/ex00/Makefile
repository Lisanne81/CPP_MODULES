NAME		=	claptrap
CC			=	c++
FLAGS		=	-Wall -Wextra -Werror -std=c++98
RM			=	rm -f

SRC			=	main.cpp ClapTrap.cpp
HDR			=	ClapTrap.hpp
OBJ			= 	$(SRC:%.cpp=%.o)
LIBS		=	-o

all: start $(NAME) $(HDR)

$(NAME): $(OBJ)
	$(CC) $(OBJ) $(LIBS) $(NAME)

%.o: %.cpp
		@$(CC) $(FLAGS) -c $(LIBS) $@ $<

start:
		@echo "\033[38;5;155m This is a: \033[0m"
		@echo "╭━━━╮╱╱╭━━━┳╮╱╱╭╮╱╭┳━━━╮"
		@echo "┃╭━╮┃╱╱┃╭━╮┃┃╱╱┃┃╱┃┃╭━╮┃"
		@echo "┃┃╱╰╯╭╮┃╰━╯┃┃╱╱┃┃╱┃┃╰━━╮"
		@echo "┃┃╱╭┳╯╰┫╭━━┫┃╱╭┫┃╱┃┣━━╮┃"
		@echo "┃╰━╯┣╮╭┫┃╱╱┃╰━╯┃╰━╯┃╰━╯┃"
		@echo "╰━━━╯╰╯╰╯╱╱╰━━━┻━━━┻━━━╯"
		@echo "\033[38;5;66m\t\tassignment\033[0m 🖥️"

clean:
		@$(RM) $(OBJ)
		@echo "\033[38;5;140mAll fixed 🦖!\033[0m"

fclean: clean
		@$(RM) $(NAME)

re: fclean all